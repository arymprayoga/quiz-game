# Quiz Game Server Environment Variables
# Copy this file to .env and fill in the appropriate values

# Server Configuration
NODE_ENV=production
PORT=4000
HEALTH_PORT=4001

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-here

# External API Configuration
API_BASE_URL=http://103.181.142.138:8000
API_TIMEOUT=30000

# Security Settings
CORS_ORIGIN=*
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Performance Settings
MAX_CONNECTIONS_PER_LOBBY=50
MEMORY_CLEANUP_INTERVAL=300000
EVENT_THROTTLE_POSITION_MS=18
EVENT_THROTTLE_WHITEBOARD_MS=50

# Health Monitor Settings
HEALTH_CHECK_INTERVAL=60000
MEMORY_THRESHOLD_MB=400

# Database (if needed in future)
# DATABASE_URL=sqlite:./data/quiz-game.db

# SSL Configuration (for production with HTTPS)
# SSL_CERT_PATH=/path/to/certificate.crt
# SSL_KEY_PATH=/path/to/private.key

# GitHub Actions Deployment Variables (set in GitHub Secrets)
# SSH_HOST=your.server.ip.address
# SSH_USERNAME=ubuntu
# SSH_KEY=your-private-ssh-key
# SSH_PORT=22